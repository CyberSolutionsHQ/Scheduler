{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://context-logs.local/schemas/final_state.schema.json",
  "title": "final_state.json (Phase 3 Output) â€” Reconciled Contract",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "resolution", "entities", "naming_map", "rules", "constraints"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "phase", "generated_at", "agent", "inputs"],
      "properties": {
        "schema_version": { "type": "string", "pattern": "^1\\.[0-9]+\\.[0-9]+$" },
        "phase": { "const": 3 },
        "generated_at": { "type": "string", "format": "date-time" },
        "agent": { "type": "string", "minLength": 1 },
        "inputs": {
          "type": "object",
          "additionalProperties": false,
          "required": ["manifest_path", "live_schema_path"],
          "properties": {
            "manifest_path": { "type": "string", "minLength": 1 },
            "live_schema_path": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "resolution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "conflicts", "decisions"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "ok_with_changes", "blocked"] },
        "conflicts": {
          "type": "array",
          "items": { "$ref": "#/$defs/conflict" }
        },
        "decisions": {
          "type": "array",
          "items": { "$ref": "#/$defs/decision" }
        }
      }
    },
    "entities": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tables", "views", "functions"],
      "properties": {
        "tables": { "type": "array", "items": { "$ref": "#/$defs/final_table" } },
        "views": { "type": "array", "items": { "$ref": "#/$defs/final_view" } },
        "functions": { "type": "array", "items": { "$ref": "#/$defs/final_function" } }
      }
    },
    "naming_map": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tables", "columns"],
      "properties": {
        "tables": {
          "type": "array",
          "items": { "$ref": "#/$defs/rename_map" }
        },
        "columns": {
          "type": "array",
          "items": { "$ref": "#/$defs/rename_map" }
        }
      }
    },
    "rules": {
      "type": "object",
      "additionalProperties": false,
      "required": ["multi_tenant", "tenant_key", "auth_model"],
      "properties": {
        "multi_tenant": { "type": "boolean" },
        "tenant_key": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
        "auth_model": { "type": "string", "enum": ["supabase_auth", "custom_users_table", "hybrid"] }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rls_required", "no_local_storage_for_state", "no_secrets_in_logs"],
      "properties": {
        "rls_required": { "type": "boolean" },
        "no_local_storage_for_state": { "type": "boolean" },
        "no_secrets_in_logs": { "type": "boolean" }
      }
    }
  },
  "$defs": {
    "conflict": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "manifest_ref", "live_ref", "message"],
      "properties": {
        "kind": { "type": "string", "enum": ["missing_in_cloud", "extra_in_cloud", "type_mismatch", "name_mismatch", "constraint_mismatch"] },
        "manifest_ref": { "type": ["string", "null"] },
        "live_ref": { "type": ["string", "null"] },
        "message": { "type": "string", "minLength": 1 }
      }
    },
    "decision": {
      "type": "object",
      "additionalProperties": false,
      "required": ["action", "from", "to", "reason"],
      "properties": {
        "action": { "type": "string", "enum": ["rename", "drop", "add", "cast", "keep"] },
        "from": { "type": ["string", "null"] },
        "to": { "type": ["string", "null"] },
        "reason": { "type": "string", "minLength": 1 }
      }
    },
    "rename_map": {
      "type": "object",
      "additionalProperties": false,
      "required": ["from", "to"],
      "properties": {
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 }
      }
    },
    "final_column": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "data_type", "nullable", "default", "references"],
      "properties": {
        "name": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
        "data_type": { "type": "string", "minLength": 1 },
        "nullable": { "type": "boolean" },
        "default": { "type": ["string", "null"] },
        "references": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "required": ["table", "column", "on_update", "on_delete"],
          "properties": {
            "table": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
            "column": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
            "on_update": { "type": "string", "minLength": 1 },
            "on_delete": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "final_table": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema", "name", "columns", "primary_key", "uniques", "indexes", "rls_enabled", "policies"],
      "properties": {
        "schema": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
        "columns": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/final_column" } },
        "primary_key": { "type": "array", "minItems": 1, "items": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" } },
        "uniques": {
          "type": "array",
          "items": { "type": "array", "items": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" } }
        },
        "indexes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "columns", "unique", "method"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "columns": { "type": "array", "items": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" } },
              "unique": { "type": "boolean" },
              "method": { "type": "string", "minLength": 1 }
            }
          }
        },
        "rls_enabled": { "type": "boolean" },
        "policies": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "command", "roles", "using", "check"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "command": { "type": "string", "minLength": 1 },
              "roles": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "using": { "type": ["string", "null"] },
              "check": { "type": ["string", "null"] }
            }
          }
        }
      }
    },
    "final_view": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema", "name", "definition"],
      "properties": {
        "schema": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "definition": { "type": "string", "minLength": 1 }
      }
    },
    "final_function": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema", "name", "signature", "return_type", "language", "definition"],
      "properties": {
        "schema": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "signature": { "type": "string", "minLength": 1 },
        "return_type": { "type": "string", "minLength": 1 },
        "language": { "type": "string", "minLength": 1 },
        "definition": { "type": "string", "minLength": 1 }
      }
    }
  }
}
